{
  "name": "webpack-webextension",
  "version": "0.0.1",
  "description": "Example of WebExtension with webpack",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "webpack",
    "build:chrome": "webpack --chrome --release",
    "build:firefox": "webpack --firefox --release",
    "start:firefox": "concurrently --kill-others \"npm run webpack --watch --firefox\" \"npm run web-ext run --source-dir build/firefox --verbose\"",
    "start:chrome": "npm run watch -- --chrome"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "concurrently": "^3.5.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "node-sass": "^4.5.2",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.16.1",
    "web-ext": "^1.10.1",
    "webpack": "^2.7.0",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "normalize.css": "^6.0.0"
  },
  "author": "Dmytro Pustovit",
  "license": "MIT"
}
